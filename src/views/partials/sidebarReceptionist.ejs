<aside class="sidebar" id="sidebar">
  <h2>Receptionist Panel</h2>
  <ul>
    <li><a href="/receptionist/dashboard">🏠 Dashboard</a></li>

    <li>
      <a href="javascript:void(0)" onclick="toggleSubMenu('roomMenu')">🛏️ Room ⯆</a>
      <ul class="submenu" id="roomMenu">
        <li><a href="/receptionist/add-room">➕ Add Room</a></li>
        <li><a href="/receptionist/view-rooms">👁 View Rooms</a></li>
      </ul>
    </li>

    <li>
      <a href="javascript:void(0)" onclick="toggleSubMenu('nurseMenu')">🧑‍⚕️ Nurse ⯆</a>
      <ul class="submenu" id="nurseMenu">
        <li><a href="/receptionist/add-nurse">➕ Add Nurse</a></li>
        <li><a href="/receptionist/view-nurses">👁 View Nurses</a></li>
      </ul>
    </li>

    <li>
      <a href="javascript:void(0)" onclick="toggleSubMenu('patientMenu')">🧍 Patient ⯆</a>
      <ul class="submenu" id="patientMenu">
        <li><a href="/receptionist/add-patient">➕ Add Patient</a></li>
        <li><a href="/receptionist/view-patients">👁 View Patients</a></li>
      </ul>
    </li>

    <li><a href="/logout">🚪 Logout</a></li>
  </ul>
</aside>
<script>
  function toggleSubMenu(id) {
    const menu = document.getElementById(id);
    menu.style.display = menu.style.display === "block" ? "none" : "block";
  }

  function toggleSidebar() {
    const sidebar = document.getElementById("sidebar");
    const main = document.querySelector(".main-container");
    const navbar = document.querySelector(".navbar");

    sidebar.classList.toggle("hidden");

    if (sidebar.classList.contains("hidden")) {
      main.style.marginLeft = "0";
      navbar.style.left = "0";
      navbar.style.width = "100%";
    } else {
      main.style.marginLeft = "240px";
      navbar.style.left = "240px";
      navbar.style.width = "calc(100% - 240px)";
    }
  }

  // Auto-open correct submenu except on dashboard
  window.addEventListener("DOMContentLoaded", () => {
    const path = window.location.pathname;

    if (path.includes("/receptionist/") && !path.endsWith("/dashboard")) {
      if (path.includes("/room")) {
        document.getElementById("roomMenu").style.display = "block";
      }
      if (path.includes("/nurse")) {
        document.getElementById("nurseMenu").style.display = "block";
      }
      if (path.includes("/patient")) {
        document.getElementById("patientMenu").style.display = "block";
      }
    }
  });
</script>

