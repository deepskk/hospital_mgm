<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Generate Patient Bill</title>
  <link rel="stylesheet" href="/css/generateBill.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="outer-wrapper">
    <div class="bill-container">
      <h2>ðŸ§¾ Generate Patient Billlllllllllllll</h2>
      <form action="/receptionist/bill/<%= patientId %>" method="POST" class="bill-form">

        <div class="form-group">
          <label>Bill ID</label>
          <input type="text" value="Auto Generated" readonly>
        </div>

        <div class="form-group">
          <label>Patient ID</label>
          <input type="text" name="patient_id" value="<%= patientId %>" readonly>
        </div>

        <div class="form-group">
          <label>Room Number</label>
          <select name="room_no" required>
            <option value="">-- Select Room --</option>
            <% if (rooms && rooms.length) { %>
              <% rooms.forEach(function(room) { %>
                <option value="<%= room.room_no %>"><%= room.room_no %></option>
              <% }) %>
            <% } else { %>
              <option disabled>No rooms found</option>
            <% } %>
          </select>
        </div>

        <div class="form-group">
          <label>Room Charges (â‚¹)</label>
          <input type="number" name="room_charges" placeholder="e.g., 1500" required>
        </div>


        <div class="form-group">
          <label>Doctor Charges (â‚¹)</label>
          <input type="number" name="doctor_charges" placeholder="e.g., 500" required>
        </div>

        <div class="form-group">
          <label>Nurse Charges (â‚¹)</label>
          <input type="number" name="nurse_charges" placeholder="e.g., 500" required>
        </div>

        <div class="form-group">
          <label>Medicine Charges (â‚¹)</label>
          <input type="number" name="medicine_charges" placeholder="e.g., 800" required>
        </div>

        <div class="form-group">
          <label>Treatment Charges (â‚¹)</label>
          <input type="number" name="treatment_charges" placeholder="e.g., 1200" required>
        </div>

        <div class="form-group">
          <label>Billing Date</label>
          <input type="text" value="<%= new Date().toISOString().split('T')[0] %>" readonly>
        </div>

        <div class="form-group full-width">
          <button type="submit" class="btn">ðŸ§¾ Generate Bill</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
