<!DOCTYPE html>
<html>
<head>
  <title>View Nurses</title>
  <link rel="stylesheet" href="/css/viewNurse.css">
  <link rel="stylesheet" href="/css/receptionistDashboard.css">
</head>
<body>
  <%- include('../partials/sidebarReceptionist') %>

  <div class="main-container">
    <%- include('../partials/navbarReceptionist') %>

    <div class="view-nurse-page">
      <h2>All Nurses</h2>
      <table class="nurse-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Shift</th>
            <th>Update</th> <!-- Update Column -->
            <th>Delete</th> <!-- Delete Column -->
          </tr>
        </thead>
        <tbody>
          <% if (nurses.length === 0) { %>
            <tr>
              <td colspan="6" style="text-align:center;">No nurse records found.</td>
            </tr>
          <% } else { %>
            <% nurses.forEach(nurse => { %>
              <tr>
                <td><%= nurse.nurse_id %></td>
                <td><%= nurse.nurse_name %></td>
                <td><%= nurse.nurse_contact %></td>
                <td><%= nurse.nurse_shift %></td>
                <td>
                  <a href="/receptionist/edit-nurse/<%= nurse.nurse_id %>" class="btn btn-edit">Update</a>
                </td>
                <td>
                  <a href="/receptionist/delete-nurse/<%= nurse.nurse_id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this nurse?');">Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
